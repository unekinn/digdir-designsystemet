{
  "name": "@digdir/designsystemet",
  "version": "0.1.0-alpha.12",
  "description": "CLI for Designsystemet",
  "author": "Designsystemet team",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digdir/designsystemet.git"
  },
  "homepage": "https://github.com/digdir/designsystemet/tree/main/scripts/cli",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./color": "./src/colors/index.ts"
  },
  "publishConfig": {
    "access": "public",
    "bin": "dist/bin/designsystemet.js",
    "exports": {
      "./color": "./dist/src/colors/index.js"
    }
  },
  "tsup": {
    "entry": [
      "bin/designsystemet.ts",
      "src/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "format": [
      "esm"
    ]
  },
  "scripts": {
    "designsystemet": "tsx ./bin/designsystemet.ts",
    "build:tokens": "yarn clean:theme && yarn designsystemet tokens -p -t ../../design-tokens -o ../../packages/theme/brand",
    "build:tokens:debug": "yarn clean:theme && tsx --inspect-brk ./bin/designsystemet.ts tokens -p -t ../../design-tokens -o ../../packages/theme/brand",
    "build": "tsup",
    "clean:theme": "yarn workspace @digdir/designsystemet-theme clean"
  },
  "files": [
    "./dist/**"
  ],
  "bin": "bin/designsystemet.js",
  "dependencies": {
    "@adobe/leonardo-contrast-colors": "^1.0.0",
    "@commander-js/extra-typings": "^12.0.1",
    "@tokens-studio/sd-transforms": "^0.16.1",
    "chalk": "^5.3.0",
    "change-case": "^5.3.0",
    "chroma-js": "^2.4.2",
    "commander": "^12.0.0",
    "fast-glob": "^3.3.2",
    "hsluv": "^1.0.1",
    "jscodeshift": "^0.15.2",
    "object-hash": "^3.0.0",
    "postcss": "^8.4.38",
    "prompts": "^2.4.0",
    "ramda": "^0.29.1",
    "rimraf": "^5.0.5",
    "style-dictionary": "^4.0.0-prerelease.34"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/jscodeshift": "^0.11.11",
    "@types/node": "^20.12.7",
    "@types/object-hash": "^3",
    "@types/prompts": "^2.4.9",
    "@types/ramda": "^0.29.9",
    "fs-extra": "^11.2.0",
    "tsup": "^8.1.0",
    "tsx": "^4.11.2",
    "typescript": "^5.4.5"
  }
}
